@model EventCorp.Models.Evento
@{
    ViewData["Title"] = "Detalles del Evento";
}

<h1>Detalles del Evento</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Categoria?.Nombre</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToShortDateString()</dd>

        <dt class="col-sm-2">Hora</dt>
        <dd class="col-sm-10">@Model.Hora</dd>

        <dt class="col-sm-2">Duración</dt>
        <dd class="col-sm-10">@Model.Duracion minutos</dd>

        <dt class="col-sm-2">Ubicación</dt>
        <dd class="col-sm-10">@Model.Ubicacion</dd>

        <dt class="col-sm-2">Cupo máximo</dt>
        <dd class="col-sm-10">@Model.CupoMaximo</dd>

        <dt class="col-sm-2">Registrado por</dt>
        <dd class="col-sm-10">@Model.Usuario?.UserName</dd>

        <dt class="col-sm-2">Fecha de registro</dt>
        <dd class="col-sm-10">@Model.FechaRegistro</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
