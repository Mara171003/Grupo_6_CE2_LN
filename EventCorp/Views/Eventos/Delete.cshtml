@model EventCorp.Models.Evento
@{
    ViewData["Title"] = "Eliminar Evento";
}

<h1>¿Estás seguro de que deseas eliminar este evento?</h1>

<div>
    <h4>@Model.Titulo</h4>
    <p>@Model.Descripcion</p>
    <dl class="row">
        <dt class="col-sm-2">Ubicación</dt>
        <dd class="col-sm-10">@Model.Ubicacion</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
